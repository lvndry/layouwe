---
import { Image } from "astro:assets";
import WhatsappQRCode from "../assets/images/qr-code-whatsapp.png";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Reserver votre voyage" id="booking">
  <div class="text-gray-600 dark:text-gray-300">
    <p>Reservez directement en nous contactant sur Whatsapp</p>
    <div class="flex justify-center">
      <div>
        <Image
          class="my-3"
          src={WhatsappQRCode}
          alt="Layouwe Whatsapp QR Code"
        />
        <p class="my-3">ou</p>
        <p>Contactez nous au <b>+237 6 82 49 62 10</b></p>
      </div>
    </div>
    <div>
      Ou envoyez un mail a <b>layouwe.contact@gmail.com</b>
    </div>
  </div>
</Layout>
